<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="42dp"
        android:layout_toStartOf="@+id/NilaiA"
        android:text="Nilai A" />

    <EditText
        android:id="@+id/NilaiA"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="8dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/NilaiA"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="11dp"
        android:layout_marginTop="67dp"
        android:layout_marginEnd="45dp"
        android:layout_toStartOf="@+id/NilaiB"
        android:text="Nilai B" />

    <EditText
        android:id="@+id/NilaiB"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/NilaiA"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="5dp"
        android:ems="10"
        android:inputType="textPersonName" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="124dp"
        android:layout_marginEnd="45dp"
        android:layout_below="@id/NilaiB"
        android:layout_toStartOf="@+id/NilaiC"
        android:text="Nilai C" />

    <EditText
        android:id="@+id/NilaiC"
        android:layout_width="283dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/NilaiB"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="5dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/NilaiC"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="11dp"
        android:layout_marginTop="180dp"
        android:layout_marginEnd="45dp"
        android:layout_toStartOf="@+id/NilaiC"
        android:text="Operator" />

    <Spinner
        android:id="@+id/NilaiO"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/NilaiC"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:ems="10">

    </Spinner>

    <Button
        android:id="@+id/proses"
        android:layout_width="119dp"
        android:layout_height="40dp"
        android:layout_below="@id/NilaiO"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="120dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="172dp"
        android:text="Proses" />

    <MultiAutoCompleteTextView
        android:id="@+id/hasil"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/proses"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="30dp" />
</RelativeLayout>